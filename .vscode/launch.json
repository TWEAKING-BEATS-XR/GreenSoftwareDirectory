{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        App

        
        {
            "name": "Launch and Debug Standalone Blazor WebAssembly App",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}"
        },
        {
            "label": "Launch Sheerpower program under Debugger",
            "type": "sheerpower-basic",
            "request": "launch",
            "name": "Ask for a filename",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "stopOnEntry": true,
            "mirrorOutput": "mirror"
        },
        {
            "label": "Attach to a Sheerpower Program already running under a Debugger",
            "type": "sheerpower-basic",
            "request": "attach",
            "name": "Ask for a filename",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "stopOnEntry": true,
            "mirrorOutput": "mirror"
        },
        {
            "type": "sheerpower-basic",
            "name": "Launch Program under Sheerpower Runtime Debugger",
            "request": "launch",
            "program": "${file}",
            "arguments": "",
            "stopOnEntry": true,
            "trace": false,
            "mirrorOutput": "mirror"
        },
        {
            "type": "sheerpower-basic",
            "name": "Attach to a program running under a Sheerpower Runtime Debugger",
            "request": "attach",
            "program": "${file}",
            "arguments": "",
            "stopOnEntry": true,
            "trace": false,
            "mirrorOutput": "mirror"
        }
    ]
}